<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Styling for XML  -->
    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rowCount">2</item>
        <item name="columnCount">3</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="relativeViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!--  Style for Library list  -->


</resources>